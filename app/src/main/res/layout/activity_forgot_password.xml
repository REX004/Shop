<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Session2.SignInActivity">

    <ImageButton
        android:id="@+id/backIBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_background"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyMain"
        android:text="Забыл пароль"
        android:textSize="32sp"
        android:fontFamily="@font/raleway_bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBottom"
        android:text="Введите Cвою Учетную Запись
 Для Сброса"
        android:textSize="16sp"
        android:lineHeight="24dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="14dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/editText"
            android:hint="xyz@gmail.com"
            android:textColorHint="@color/editText"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logBT"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:background="@drawable/edit_text_background"
        app:backgroundTint="@color/blue"
        android:text="Отправить"
        style="@style/Platform.MaterialComponents"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="14sp"/>


</LinearLayout>