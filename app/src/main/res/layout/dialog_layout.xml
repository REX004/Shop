<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="196dp"
    android:orientation="vertical"
    android:background="@drawable/edit_text_background"
    android:backgroundTint="@color/white"
    android:padding="16dp">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="10dp"
        android:background="@drawable/letter"
        android:src="@drawable/letters"/>

    <TextView

        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="42dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyMain"
        android:text="Проверьте Ваш Email"
        android:textSize="16sp"
        android:lineHeight="24dp"
        android:textAlignment="center"
        android:fontFamily="@font/raleway_bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBottom"
        android:text="Мы отправили код восстановления пароля на вашу электронную почту."
        android:textSize="16sp"
        android:lineHeight="24dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>