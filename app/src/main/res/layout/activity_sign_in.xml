<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Session2.SignInActivity">

    <ImageButton
        android:id="@+id/backIBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_background"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyMain"
        android:text="Привет!"
        android:textSize="32sp"
        android:fontFamily="@font/raleway_bold"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="42dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBottom"
        android:text="Заполните Свои данные или продолжите через социальные медиа"
        android:textSize="16sp"
        android:lineHeight="24dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:orientation="vertical"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyMain"
            android:text="Email"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_medium"
            />
        <EditText
            android:id="@+id/emailET"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="14dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/editText"
            android:hint="xyz@gmail.com"
            android:textColorHint="@color/editText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:orientation="vertical"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyMain"
            android:text="Пароль"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_medium"
            />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/passwordET"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:paddingLeft="14dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/editText"
            android:hint="xyz@gmail.com"
            android:drawableEnd="@drawable/password"
            android:paddingEnd="14dp"
            android:textColorHint="@color/editText"/>
    </LinearLayout>
    <TextView
        android:id="@+id/restoreTXT"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBottom"
        android:text="Востановить"
        android:textSize="12sp"
        android:layout_marginHorizontal="42dp"
        android:textAlignment="textEnd"
        android:fontFamily="@font/poppins_regular"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logBT"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:background="@drawable/edit_text_background"
        app:backgroundTint="@color/blue"
        android:text="Войти"
        style="@style/Platform.MaterialComponents"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="14sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logGoogleBT"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:background="@drawable/edit_text_background"
        app:backgroundTint="@color/grey"
        android:text="Войти с Google "
        android:textColor="@color/greyMain"
        app:icon="@drawable/goolt"
        app:iconGravity="textStart"
        app:iconTint="@null"
        style="@style/Platform.MaterialComponents"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="14sp"/>

<LinearLayout
    android:layout_marginTop="70dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyBottom"
        android:text="Вы впервые? "
        android:textSize="16sp"
        android:fontFamily="@font/raleway_medium"
        />

    <TextView
        android:id="@+id/createUsTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1A1D1E"
        android:text="Создать пользователя"
        android:textSize="16sp"
        android:fontFamily="@font/raleway_medium"
        />
</LinearLayout>


</LinearLayout>